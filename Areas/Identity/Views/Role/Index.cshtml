@model List<RoleModel>
@{
    ViewData["Title"] = "Role List";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage"></partial>


<div class="mb-2">
    <a class="btn btn-secondary" asp-action="Create">Create new role</a>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Manage Member</a>
</div>

<table class="table">
    <tr>
        <th>Role Name</th>
        <th>Action</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>
                <p>@role.Name</p>
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-roleid="@role.Id">Update</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-roleid="@role.Id">Delete</a>
            </td>
        </tr>
    }
</table>
